<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/no_baskets_text_container"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_centerInParent="true"
        android:layout_above="@+id/no_baskets_label"
        android:id="@+id/emoji_label"
        android:fontFamily="sans-serif-light"
        android:textSize="80sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_jobs_emoji"/>

    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/no_baskets_label"
        android:fontFamily="sans-serif-light"
        android:textSize="26sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/no_jobs_available"
         />

    <TextView
        android:textSize="18sp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/no_baskets_label"
        android:fontFamily="sans-serif-medium"
        android:text="@string/no_jobs_please_try_later"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>